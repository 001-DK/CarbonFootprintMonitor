<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalMainPage"
    android:background="#f6fdfb">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="#f6fdfb">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6fdfb">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/circle"
                android:src="@drawable/profile"
                />
            <TextView
                android:id="@+id/personalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lets Measure\nyour CO2 footprint."
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:layout_marginTop="100dp"
                android:textColor="#607069"/>

            <TextView
                android:id="@+id/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="24sp"
                android:layout_below="@+id/personalTitle"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:textColor="#607069"/>
            <GridLayout
                android:id="@+id/personalGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/categories"
                android:layout_marginTop="15dp"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="#f6fdfb">
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/houseImg"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/home"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HouseHold"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#607069"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/personalCarImg"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/personal_car"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Car"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#607069"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/personalFlight"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/flights"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flights"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#607069"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/personalBus"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/bus"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bus &amp; Rail"
                            android:layout_gravity="center_horizontal"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#607069" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </RelativeLayout>
    </ScrollView>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:background="#f6fdfb">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:backgroundTint="#387468"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/Home"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/home_tab"/>


                <ImageView
                    android:id="@+id/insightsTab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/baseline_insights_24"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/home_tab1"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/accountTab"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/person2" />

                <ImageView
                    android:id="@+id/log_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/baseline_logout_24" />

            </LinearLayout>
        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/actionBtn"
            android:src="@drawable/baseline_compare_arrows_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/app_bar"
            android:backgroundTint="#f6fdfb"
            app:layout_anchorGravity="top|center"
            app:maxImageSize="30dp"
            android:layout_marginBottom="5dp"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>